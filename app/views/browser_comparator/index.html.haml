#content
  #header
    %h1.title Browsers Comparator
    = t 'hello'
    = t :bye


    = link_to "Français", root_path(locale: "fr")
    = link_to "English", root_path(locale: "en")


    = form_tag change_locale_path, method: :get do
      = select_tag "locale_name", options_from_collection_for_select(I18n.available_locales, 'to_s', 'to_s', :selected => I18n.locale)
      %input{type: :submit, value: "Change Locale"}


    %div.images
      .img_firefox
      .img_chrome
      .img_ie
      .img_opera
      .img_safari

  %table#tab_browsers
    %tr.browsers
      %th.empty_cell
      - @last_versions.each_with_index do |version, index|
        %th{class: "#{index == 0 ? 'current_browser' : 'other_browser'}"}
          = version.browser_family.name

    %tr.version_date_release
      %th.feature_name Version
      - @last_versions.each_with_index do |version, index|
        %td{class: "#{index == 0 ? 'current_browser' : 'other_browser'}"}
          = version.name

    %tr.version_date_release
      %th.feature_name Dernière mise à jour
      - @last_versions.each_with_index do |version, index|
        %td{class: "#{index == 0 ? 'current_browser' : 'other_browser'}"}
          = version.date_release

    - @features.each do |feature|
      %tr{class: "#{current_browser_has_feature(feature)}"}
        %th.feature_name
          = feature.name
        - @last_versions.each_with_index do |version, index|
          = compare_features_value(version, feature, index == 0 )

